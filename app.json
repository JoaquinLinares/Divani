{
  "expo": {
    "name": "Divani",
    "slug": "Divani",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.juliancarelli.Divani",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicación necesita acceso a la cámara para escanear códigos de barras.",
        "NSPhotoLibraryUsageDescription": "Esta aplicación necesita acceso a la galería para guardar y cargar imágenes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.juliancarelli.Divani",      
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"    
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
